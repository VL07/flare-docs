---
import type { AnyRoute } from '../utils/router'
import SidebarItem from './SidebarItem.astro';
type Props = {
	routes: AnyRoute[]
}
const { routes } = Astro.props
---

<nav class="sidebar">

	<ul class="sidebar-list">
		{ routes.map(route => {
			return <SidebarItem route={ route } />
		})}
	</ul>
</nav>

<style>
	.sidebar {
		display: inline-block;
		padding: 0 16px;
		border-right: 1px var(--border) solid;
		background-color: var(--background);
		background-color: var(--background-transparent);
		backdrop-filter: blur(var(--blur));
		-webkit-backdrop-filter: blur(var(--blur));
		position: fixed;
		height: calc(100vh - 64px);
		width: 224px;
	}

	.title {
		font-family: "roboto", sans-serif;
		font-weight: bold;
		font-size: 20px;
	}

	.sidebar-list {
		padding-left: 0;
	}
</style>